{
    "require": {
        "tightenco/jigsaw": "^1.3.9",
        "samdark/sitemap": "^2.2",
        "scrivo/highlight.php": "^9.15"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "build": "vendor/bin/jigsaw build",
        "serve": "./vendor/bin/jigsaw serve",
        "watch": "parallel -- 'watchexec -w ./source -c composer build' 'composer serve'"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
